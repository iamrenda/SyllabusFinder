{
    "manifest_version": 3,
    "name": "青山学院大学シラバスファインダー",
    "version": "1.0",
    "description": "青山学院大学学生向けシラバス検索拡張機能です。",
    "permissions": ["storage", "sidePanel"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "パネルを開くにはクリックしてください",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "icons": {
        "128": "icon.png"
    },
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://cp.aim.aoyama.ac.jp/*"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": ["https://syllabus.aoyama.ac.jp/*", "https://cp.aim.aoyama.ac.jp/*"],
    "web_accessible_resources": [
        {
            "matches": ["https://syllabus.aoyama.ac.jp/*", "https://cp.aim.aoyama.ac.jp/*"],
            "resources": ["faculties.json"]
        }
    ]
}
